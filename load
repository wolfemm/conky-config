${template0 2}${exec awk '/cpu MHz/{i++}i==3{printf "% 5d",$4; exit}' /proc/cpuinfo}MHz
${template0 3}${exec awk '/cpu MHz/{i++}i==4{printf "% 5d",$4; exit}' /proc/cpuinfo}MHz
